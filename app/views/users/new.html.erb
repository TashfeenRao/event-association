

<%= form_for(@user,
  html: {class: "form-horizontal"}) do |f| %>

  <fieldset>
    <div id="legend">
      <legend class="">Register</legend>
    </div>
    <div class="control-group">
      <!-- Username -->
      <%= f.label :name, class: "control-label", placeholder: "Username"%>
      <div class="controls">
        <%= f.text_field :name, class:"input-xlarge", placeholder:"" %>
      </div>
    </div>

    <div class="control-group">
      <!-- Username -->
      <%= f.label :email, class: "control-label", placeholder: "E-mail"%>
      <div class="controls">
        <%= f.email_field :email, class:"input-xlarge", placeholder:"" %>
      </div>
    </div>

    <div class="control-group">
      <!-- Username -->
      <%= f.label :password, class: "control-label", placeholder: "E-mail"%>
      <div class="controls">
        <%= f.password_field :password, class:"input-xlarge", placeholder:"" %>
      </div>
    </div>


    <div class="control-group">
      <!-- Username -->
      <%= f.label :password_confirm, class: "control-label", placeholder: "E-mail"%>
      <div class="controls">
        <%= f.password_field :password_confirm, class:"input-xlarge", placeholder:"" %>
      </div>
    </div>

    <div class="control-group" style="margin-top : 2rem">
      <!-- Button -->
      <div class="controls">
        <%= f.submit "Register" , class:"btn btn-success"%>
      </div>
    </div>
  </fieldset>
<% end %>
