<div class="container" align="center">

<button type="button" class="btn btn-link">
    <%= link_to "Back to all Events", events_path%>
</button>
<button>
<%= link_to "Create Event", new_event_path ,class:'btn btn-link'%>
</button>

<button>
<%= link_to "Signout", signout_path, method: :delete ,class:'btn btn-link'%>
</button>


<h1><%= @user.name %></h1>
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          Upcoming Events
        </div>
        <ul class="list-group list-group-flush">
          <% @upcoming_events.each do |event| %>
          <li class="list-group-item">
            <%= event.title %>
             <small>(<%= event.date%> )
             <%= link_to "show", event_path(event)%>
             </small>
          </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          Events You Created
        </div>
        <ul class="list-group list-group-flush">
          <% current_user.events.each do |event| %>
          <li class="list-group-item">
            <%= event.title %>
             <small>(<%= event.date%> )
             <%= link_to "show", event_path(event)%>
             </small>
          </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          Previous Events
        </div>
        <ul class="list-group list-group-flush">
          <% @previous_events.each do |event| %>
          <li class="list-group-item">
            <%= event.title %>
            <small><%= event.date %></small>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
